# .flake8
[flake8]
# Maximum line length to match PEP8 recommendation or fit your team's standards
max-line-length = 88

# Exclude some common directories and files
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    .venv,
    venv,
    .eggs,
    *.egg,
    .mypy_cache,
    .pytest_cache

# Ignore specific warning/error codes if needed
# E203 and W503 are often ignored when using Black (formatter)
ignore = 
    E203,
    W503

# Show source code for each error (useful for debugging)
show-source = true

# Count total number of errors at the end
count = true

# Enable specific flake8 plugins if you're using any (optional)
# For example:
# select = B,C,E,F,W,T4,B9

# Maximum allowed complexity for a function (cyclomatic complexity)
max-complexity = 10
